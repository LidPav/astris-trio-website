<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title }} | {{ site.name }}</title>
  <meta name="description" content="{{ description or site.tagline }}" />
  <link rel="stylesheet" href="/assets/css/style.css" />
</head>
<body>
  <a class="skip" href="#content">Zum Inhalt springen</a>

  <header class="header">
    <div class="wrap header__inner">
      <a class="brand" href="/">
        <span class="brand__name">{{ site.name }}</span>
        <span class="brand__tag">{{ site.tagline }}</span>
      </a>

      <nav class="nav" aria-label="Hauptnavigation">
        <a href="/ensemble/" class="nav__link">Ensemble</a>
        <a href="/musiker/" class="nav__link">Musiker:innen</a>
        <a href="/repertoire/" class="nav__link">Repertoire</a>
        <a href="/konzerte/" class="nav__link">Konzerte</a>
        <a href="/media/" class="nav__link">Media</a>
        <a href="/presse/" class="nav__link">Presse</a>
        <a href="/kontakt/" class="nav__link">Kontakt</a>
      </nav>
    </div>
  </header>

  <main id="content" class="main">
    <div class="wrap">
      {{ content | safe }}
    </div>
  </main>

  <footer class="footer">
    <div class="wrap footer__inner">
      <div>
        <strong>{{ site.name }}</strong><br />
        <span class="muted">{{ site.tagline }}</span>
      </div>
      <div class="footer__links">
        <a href="/kontakt/">Booking</a>
        <a href="/impressum/">Impressum</a>
        <a href="/datenschutz/">Datenschutz</a>
      </div>
    </div>
  </footer>
</body>
</html>
