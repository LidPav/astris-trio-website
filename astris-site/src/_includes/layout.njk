<!doctype html>
<html lang="de">
<head>
  <link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:wght@400;500&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title }} | {{ site.name }}</title>
  <meta name="description" content="{{ description or site.tagline }}" />
  <link rel="stylesheet" href="{{ '/assets/css/style.css' | url }}" />
</head>
<body>
  <a class="skip" href="#content">Zum Inhalt springen</a>

  <header class="header">
    <div class="wrap header__inner">
      <a class="brand" href="{{ '/' | url }}">
        <span class="brand__name">{{ site.name }}</span>
        <span class="brand__tag">{{ site.tagline }}</span>
      </a>

      <nav class="nav" aria-label="Hauptnavigation">
        <a href="{{ '/ensemble/' | url }}" class="nav__link">Ensemble</a>
        <a href="{{ '/musiker/' | url }}" class="nav__link">Musiker:innen</a>
        <a href="{{ '/repertoire/' | url }}" class="nav__link">Repertoire</a>
        <a href="{{ '/konzerte/' | url }}" class="nav__link">Konzerte</a>
        <a href="{{ '/media/' | url }}" class="nav__link">Media</a>
        <a href="{{ '/presse/' | url }}" class="nav__link">Presse</a>
        <a href="{{ '/kontakt/' | url }}" class="nav__link">Kontakt</a>
      </nav>
    </div>
  </header>

  <main id="content" class="main">
    <div class="wrap">
      {{ content | safe }}
    </div>
  </main>

  <footer class="footer">
    <div class="wrap footer__inner">
      <div>
        <strong>{{ site.name }}</strong><br />
        <span class="muted">{{ site.tagline }}</span>
      </div>
      <div class="footer__links">
        <a href="{{ '/kontakt/' | url }}">Booking</a>
        <a href="{{ '/impressum/' | url }}">Impressum</a>
        <a href="{{ '/datenschutz/' | url }}">Datenschutz</a>
      </div>
    </div>
  </footer>
</body>
</html>
