---
layout: layout.njk
title: "Musiker:innen"
---
<h1>Musiker:innen</h1>
<div class="musiker-grid">
{% for m in musiker.members %}
  <article class="musiker-card">

    {# Split name robust: first token = Vorname, rest = Nachname (oder Nachnamen) #}
    {% set nameParts = m.name.split(' ') %}
    {% set firstname = m.name.split(' ')[0] %}
    {% set lastname = m.name.replace(firstname ~ ' ', '') %}

    <h2 class="musiker-name" data-fullname="{{ m.name }}">
    <span class="musiker-name__first">{{ firstname }}</span>
    <span class="musiker-name__last">{{ lastname }}</span>
    </h2>

    <p class="muted">{{ m.instrument }}</p>

    <img
      src="{{ m.image | url }}"
      alt="{{ m.name }}"
      class="musiker-card__image"
    >

    <p>{{ m.bio | nl2br }}</p>
  </article>
{% endfor %}
</div>

<section class="musiker-grid">
  {% for m in members.members %}
    <article>
      <img class="musiker-card__image" src="{{ m.image }}" alt="{{ m.name }}">
      <div class="musiker-card__content">
        <h2 class="musiker-name">
          <span class="musiker-name__first">{{ m.name.split(' ')[0] }}</span>
          <span class="musiker-name__last">{{ m.name.split(' ').slice(1).join(' ') }}</span>
        </h2>
        <p class="muted">{{ m.instrument }}</p>
        <p>{{ m.bio }}</p>
      </div>
    </article>
  {% endfor %}
</section>




