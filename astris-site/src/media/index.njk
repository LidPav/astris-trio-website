<h1>Medien</h1>
<p class="lead">Ausgewählte Videoaufnahmen</p>

<div class="list">
  {% for v in media.videos %}
    <div class="card">
      <h2 class="h2">{{ v.title }}</h2>
      {% if v.meta %}
        <p class="muted small">{{ v.meta }}</p>
      {% endif %}

      <div class="video-embed">
        <iframe
          src="https://www.youtube.com/embed/{{ v.youtubeId }}"
          title="YouTube Video"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen>
        </iframe>
      </div>
    </div>
  {% endfor %}
</div>

